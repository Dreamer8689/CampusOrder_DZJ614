
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dreamer.neusoft.campusorder_dzj614.fragment.OrderFragment"
    >



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bottom_font"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/order_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bottom_font"
            android:src="@drawable/ic_soty" />

        <TextView
            android:id="@+id/order_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="24dp"
            android:text="订单列表" />

        <ImageButton
            android:id="@+id/order_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bottom_font"
            android:src="@drawable/more" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/order_RecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef"/>

</LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>