<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:stateListAnimator="@animator/touch_raise"
    android:id="@+id/comment_cardView"
    app:elevation="1dp">

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:src="@drawable/a9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_foodname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/pickerview_timebtn_nor"
                android:text="口口香"
                />

            <TextView
                android:id="@+id/search_foodinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:lines="3"
                android:text="简介："
                />

            <TextView
                android:id="@+id/search_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/orangered"
                android:gravity="right"
               android:paddingRight="15dp"
                android:text="￥24" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
